<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kyawhtut.pos.ui.view.ComponentReportItem
        android:id="@+id/btn_report_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="ရောင်အားအကောင်းဆုံးကုန်ပစ္စည်းများ"
        app:layout_constraintEnd_toStartOf="@+id/btn_report_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kyawhtut.pos.ui.view.ComponentReportItem
        android:id="@+id/btn_report_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:text="ဖောက်သည်များဝယ်ယူမှု"
        app:layout_constraintEnd_toStartOf="@+id/btn_report_three"
        app:layout_constraintStart_toEndOf="@+id/btn_report_one"
        app:layout_constraintTop_toTopOf="@+id/btn_report_one" />

    <com.kyawhtut.pos.ui.view.ComponentReportItem
        android:id="@+id/btn_report_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:text="မရောင်းရသေးသောကုန်ပစ္စည်းများ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_report_two"
        app:layout_constraintTop_toTopOf="@+id/btn_report_one" />

    <com.kyawhtut.pos.ui.view.ComponentReportItem
        android:id="@+id/btn_report_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="ဝန်ထမ်းအလိုက် အရောင်းစာရင်း"
        app:layout_constraintEnd_toEndOf="@+id/btn_report_one"
        app:layout_constraintStart_toStartOf="@+id/btn_report_one"
        app:layout_constraintTop_toBottomOf="@+id/btn_report_one" />

    <com.kyawhtut.pos.ui.view.ComponentReportItem
        android:id="@+id/btn_report_five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="ဝန်ထမ်းနှစ်ဦး အရောင်းစာရင်းနှိုင်းယှဥ်"
        app:layout_constraintEnd_toEndOf="@+id/btn_report_two"
        app:layout_constraintStart_toStartOf="@+id/btn_report_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_report_two"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ticket_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="serif"
        android:padding="@dimen/margin_medium_2"
        android:text="@string/lbl_hint_user_name"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ticket_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_outline_box"
        android:fontFamily="serif"
        android:paddingStart="@dimen/margin_medium_2"
        android:paddingTop="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_medium_2"
        android:paddingBottom="@dimen/margin_small"
        android:text="@string/app_name"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ticket_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ticket_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/app_name"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/colorc9c9c9"
        app:layout_constraintEnd_toEndOf="@+id/tv_ticket_total_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_ticket_id" />

</androidx.constraintlayout.widget.ConstraintLayout>